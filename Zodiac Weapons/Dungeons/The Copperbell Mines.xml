		<If Condition="GetInstanceTodo(4) == 0">
			<MoveTo XYZ="-100.4114, -57.878, 6.672525"/>
			<BotSettings AutoEquip="0" />	
				<If Condition="ClassName == ((ClassJobType.Bard))"> 
