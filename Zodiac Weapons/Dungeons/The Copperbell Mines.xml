			<Grind GrindRef="FinalBoss" While="not GameObjectManager.GetObjectByNPCId(101).CurrentHealth == 0"/> <!-- Fight final Boss -->
			<If Condition="&openchest; == 1">
				<LLOpenChest />
			</If>
			<While condition="DutyManager.InInstance">	
				<WaitTimer WaitTime="10" />
				<LLLeaveDuty/>
			</While>				
		</If>				
	</If>
	
	
