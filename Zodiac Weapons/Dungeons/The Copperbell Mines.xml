			</While>
			<MoveTo XYZ="56.72637,-37.99974,47.99045" />
			<While condition="GetInstanceTodo(2) == 0">
				<RunCode name="BlastingDevice2"/>
			</While>
		</If>

		<!-- Arrive in shaft E2 0/1 -->
