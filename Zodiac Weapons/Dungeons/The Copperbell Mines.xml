				</While>
				<If condition="GetInstanceTodo(2) == 0 and not GameObjectManager.GetObjectByNPCId(2001537).IsTargetable">
					<UseTransport NpcId="2000180" XYZ="58.85282,-37.77425,55.07696"  /> <!-- Blasting Device -->	
