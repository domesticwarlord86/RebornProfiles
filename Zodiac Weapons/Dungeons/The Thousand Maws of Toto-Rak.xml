    <GrindArea name="FinalBoss">
      <Hotspots>
        <Hotspot Radius="90" XYZ="231.9938,-39.29176,-144.2978" name="Name"/>
      </Hotspots>
      <TargetMobs>
        <TargetMob Id="444" Weight="1"/> <!-- Graffias -->
      </TargetMobs>
